@model IEnumerable<ManageStock.Models.Produit>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeBarres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixUnitaire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeuilAlerte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategorieNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFournisseurNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeBarres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixUnitaire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeuilAlerte)
            </td>
            <td>
               
                @Html.DisplayFor(modelItem => item.IdCategorieNavigation.Nom)
               
            </td>
            <td>
               
                @Html.DisplayFor(modelItem => item.IdFournisseurNavigation.Nom)
           
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProduit">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProduit">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProduit">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
