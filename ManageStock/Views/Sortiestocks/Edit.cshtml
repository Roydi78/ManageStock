@model ManageStock.Models.Sortiestock

@{
    ViewData["Title"] = "Modifier une Sortie de stock";
}

<h4>Modifier une Sortie de stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSortie" />
            <div class="form-group">
                <label asp-for="IdProduit" class="control-label"></label>
                <input type="text" id="Produitnom" class="form-control" value="@Model.IdProduitNavigation.Nom" readonly />
                <input type="hidden" asp-for="IdProduit" />
                <span asp-validation-for="IdProduit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantité" class="control-label"></label>
                <input asp-for="Quantité" class="form-control" />
                <span asp-validation-for="Quantité" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateSortie" class="control-label"></label>
                <input asp-for="DateSortie" class="form-control" />
                <span asp-validation-for="DateSortie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEntrepot" class="control-label"></label>
                <input type="text" id="Entrepotnom" class="form-control" value="@Model.IdEntrepotNavigation.Nom" readonly />
                <input type="hidden" asp-for="IdEntrepot" />
                <span asp-validation-for="IdEntrepot" class="text-danger"></span>
            </div>
            <hr style="visibility: hidden;" />
            <div class="form-group d-flex gap-2">
                <input type="submit" value="Modifier" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-secondary">Retour</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
