@model ManageStock.Models.Inventaire

@{
    ViewData["Title"] = "Supprimer un Inventaire";
}

<h4>Suppression Inventaire</h4>
<hr />
<h6>Êtes-vous sûrs de vouloir supprimer cet élément ?</h6>
<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateInventaire)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateInventaire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdEntrepotNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEntrepotNavigation.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Commentaire)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Commentaire)
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdInventaire" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Retour</a>
    </form>
</div>
