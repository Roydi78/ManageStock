@model ManageStock.Models.Fournisseur

@{
    ViewData["Title"] = "Supprimer un Fournisseur";
}

<h4>Suppression Fournisseur</h4>
<hr />
<h6>Êtes-vous sûrs de vouloir supprimer cet élément ?</h6>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Téléphone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Téléphone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdFournisseur" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Retour</a>
    </form>
</div>
